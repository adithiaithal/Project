  public class MainActivity extends AppCompatActivity {    
    @Override      protected void onCreate(Bundle savedInstanceState) {         
super.onCreate(savedInstanceState);         
setContentView(R.layout.activity_main);         
final EditText test1 = findViewById(R.id.test1);         
final EditText test2 = findViewById(R.id.test2);      
   final EditText test3 = findViewById(R.id.test3);       
  final EditText aat = findViewById(R.id.aat);
         final TextView result = findViewById(R.id.result);  
        Button b = findViewById(R.id.button);  
     
        b.setOnClickListener(new View.OnClickListener() 
{             @Override              public void onClick(View view) {  
                                  int t1 = Integer.parseInt(test1.getText().toString());                 
int t2 = Integer.parseInt(test2.getText().toString());                 
int t3 = Integer.parseInt(test3.getText().toString());                 
int a = Integer.parseInt(aat.getText().toString());  
                  int total = 0;  
                  if(t1 <= t2 && t1 <= t3) {                     
total += t2 + t3;  
                } else if (t2 <= t1 && t2 <= t3) {                     total += t1 + t3;                  } else {  
                    total += t1 + t2;  
                }  
                  total += a;  
                   if(total < 20){                      result.setTextColor(Color.parseColor("Red"));  
                } else {  
                    result.setTextColor(Color.parseColor("Green"));  
                }  
                  result.setText(total+"");  
            }  
        });  
  
    } }  
  
  
